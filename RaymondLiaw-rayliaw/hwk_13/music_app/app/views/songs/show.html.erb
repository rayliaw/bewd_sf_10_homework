<div class="container">
  <h1><%= @song.artist.name %> - <%= @song.name %></h1>

  <div class="table-responsive">
    <table class="table table-hover">
      <tr class="small">
        <th>Rating</th>
        <th>Review</th>
        <th>Reviewer</th>
      </tr>

      <% @song.reviews.each do |review| %>
        <tr>
          <td><%= review.reviewer %></td>
          <td><%= review.rating %></td>
          <td><%= review.review %></td>
        </tr>
      <% end %>

    </table>

    <div class="well">
      <%= link_to 'Back', artist_path(@song.artist_id), class: 'btn btn-default' %>
      <%= link_to 'Add Review', new_song_review_path(@song), class: 'btn btn-default' %>
    </div>
  </div>
